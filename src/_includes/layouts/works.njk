---
layout: layouts/base.njk
templateClass: works-content
---
{% include "components/background.njk" %}
<section class="takanorip-workHead">
  <h2 class="takanorip-workTitle">{{ title }}</h2>
</section>
<div class="takanorip-workInfo">
  <div class="takanorip-workCategory">
    <p class="takanorip-workCategoryTitle">Category:</p>
    <ul class="takanorip-workTechsList">
    {%- for c in category -%}
      <li class="takanorip-workTechsItem">{{ c }}</li>
    {%- endfor -%}
    </ul>
  </div>
  <div class="takanorip-workTechs">
    <p class="takanorip-workTechsTitle">Technologies:</p>
    <ul class="takanorip-workTechsList">
    {%- for t in technologies -%}
      <li class="takanorip-workTechsItem">{{ t }}</li>
    {%- endfor -%}
    </ul>
  </div>
  <a class="takanorip-workViewDetail" href="{{ projectUrl }}">
    <div class="takanorip-workViewDetailWrap">
      <span class="takanorip-workViewDetailText">View Project</span>
      <svg class="takanorip-workViewDetailIcon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M21 13v10h-21v-19h12v2h-10v15h17v-8h2zm3-12h-10.988l4.035 4-6.977 7.07 2.828 2.828 6.977-7.07 4.125 4.172v-11z"/></svg>
    </div>
  </a>
</div>
<div class="takanorip-work">
  {{ content | safe }}
</div>